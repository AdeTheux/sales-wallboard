  //     $j('#zd-iframe').attr('height', $j('#helpdesk-body').data('page-height'));
  //   }
  // });



  var eventMethod = window.addEventListener ? "addEventListener" : "attachEvent";
  var eventer = window[eventMethod];
  var messageEvent = eventMethod == "attachEvent" ? "onmessage" : "message";

  // Listen to message from child window
  eventer(messageEvent,function(e) {
    $('#zd-iframe').attr('height', e.data+"px");
  },false);






</script>


<div id="helpdesk-body">

  <h1>Pre-sales Request Form</h1>

  <div class="container-fluid helpdesk-selector">

    <div class="row-fluid">
      <div class="span3 offset3">
        <a href="/helpdesk/new" class="btn btn-medium"><i class="icon-user"></i>New Request</a>
      </div>
      <div class="span3 offset1">
        <a href="/helpdesk/login" class="btn btn-medium"><i class="icon-calendar"></i>View Requests</a>
      </div>
    </div>

    <iframe id="zd-iframe" src="https://enablers.zendesk.com/requests/new/?hide=true&email=<%= current_user.email %>" frameborder="0" style="overflow-y: hidden;;width:100%" height="600px" width="100%" scrolling="yes"></iframe>

  </div>

</div>



