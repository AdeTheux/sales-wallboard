<%= link_to '← Back to your dashboard', root_path, :class => 'btn' %>
<% if current_user.part_of_quarter? %>
  <%= link_to 'New Sale', new_sale_path, :class => 'btn btn-primary' %>
<% end %>

<h1 class='pagetitle'>Listing sales</h1>

<table class='table table-striped'>
  <tr>
    <th>Date</th>
    <th>Company</th>
    <th>ARR</th>
    <th>MRR</th>
    <th>Actions</th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.date %></td>
    <td><%= sale.company %></td>
    <td><%= currency sale.arr %></td>
    <td><%= currency sale.mrr %></td>
    <td><%= link_to sale do %><i class='icon-search'></i><% end %>
        <%= link_to edit_sale_path(sale.id) do %><i class="icon-edit"></i><% end %>
        <%= link_to sale, confirm: 'Are you sure?', method: :delete do %><i class='icon-trash'></i><% end %></td>
  </tr>
<% end %>
</table>
